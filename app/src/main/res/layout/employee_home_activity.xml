<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Logout (top-right) -->
    <Button
        android:id="@+id/btn_employee_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textAllCaps="false"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@color/primaryBlue"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Greeting -->
    <TextView
        android:id="@+id/tv_hello_employee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello, Employee"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_employee_logout" />

    <!-- Company name -->
    <TextView
        android:id="@+id/tv_company_name_employee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Company: My Company"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_hello_employee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Section title -->
    <TextView
        android:id="@+id/tv_employee_actions_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Employee actions"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/tv_company_name_employee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ROW 1: Attendance | My shifts -->
    <Button
        android:id="@+id/btn_attendance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Attendance"
        android:textAllCaps="false"
        android:backgroundTint="@color/primaryBlue"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_employee_actions_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_my_shifts" />

    <Button
        android:id="@+id/btn_my_shifts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="My shifts"
        android:textAllCaps="false"
        android:backgroundTint="@color/primaryBlue"
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@id/tv_employee_actions_label"
        app:layout_constraintStart_toEndOf="@id/btn_attendance"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ROW 2: My vacations | My tasks -->
    <Button
        android:id="@+id/btn_vacation_requests"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="My vacations"
        android:textAllCaps="false"
        android:backgroundTint="@color/primaryBlue"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/btn_attendance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_my_tasks" />

    <Button
        android:id="@+id/btn_my_tasks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="My tasks"
        android:textAllCaps="false"
        android:backgroundTint="@color/primaryBlue"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@id/btn_my_shifts"
        app:layout_constraintStart_toEndOf="@id/btn_vacation_requests"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ROW 3: Chat | Video calls -->
    <Button
        android:id="@+id/btn_chat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chats"
        android:textAllCaps="false"
        android:backgroundTint="@color/primaryBlue"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintTop_toBottomOf="@id/btn_vacation_requests"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_video_calls" />

    <Button
        android:id="@+id/btn_video_calls"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Video calls"
        android:textAllCaps="false"
        android:backgroundTint="@color/primaryBlue"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:layout_marginStart="6dp"
        app:layout_constraintTop_toBottomOf="@id/btn_my_tasks"
        app:layout_constraintStart_toEndOf="@id/btn_chat"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ROW 4: My salary slips | All employees -->
    <Button
        android:id="@+id/btn_my_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="My profile"
        android:textAllCaps="false"
        android:backgroundTint="@color/primaryBlue"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_video_calls"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
