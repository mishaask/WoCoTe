<?xml version="1.0" encoding="utf-8"?>
<!--
    Layout for a single pending employee item displayed in a RecyclerView.
    Shows employee name, email, and action buttons (Approve / Reject).
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="@android:color/white">

    <!-- Employee full name -->
    <TextView
        android:id="@+id/tv_employee_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee name"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <!-- Employee email address -->
    <TextView
        android:id="@+id/tv_employee_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="email@example.com"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="10dp"/>

    <!-- Action buttons row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Approve employee button -->
        <Button
            android:id="@+id/btn_approve"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Approve"
            android:backgroundTint="@color/primaryBlue"/>

        <!-- Reject employee button -->
        <Button
            android:id="@+id/btn_reject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Reject"
            android:backgroundTint="@color/primaryBlue"/>
    </LinearLayout>

</LinearLayout>
