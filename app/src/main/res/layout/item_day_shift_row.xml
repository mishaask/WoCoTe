<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_shift_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Morning (08-16)"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_assign"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Manager mode: show shift time -->
    <TextView
        android:id="@+id/tv_shift_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="08:00 - 16:00"
        android:alpha="0.85"
        app:layout_constraintStart_toStartOf="@id/tv_shift_title"
        app:layout_constraintEnd_toEndOf="@id/tv_shift_title"
        app:layout_constraintTop_toBottomOf="@id/tv_shift_title"
        android:layout_marginTop="4dp"
        android:visibility="gone"/>

    <!-- Availability mode: CAN / PREFER_NOT / CANT -->
    <TextView
        android:id="@+id/tv_shift_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Status: CAN"
        android:alpha="0.85"
        app:layout_constraintStart_toStartOf="@id/tv_shift_title"
        app:layout_constraintEnd_toEndOf="@id/tv_shift_title"
        app:layout_constraintTop_toBottomOf="@id/tv_shift_time"
        android:layout_marginTop="4dp" />

    <!-- Manager mode: assigned workers preview -->
    <TextView
        android:id="@+id/tv_assigned"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Assigned: 0"
        android:alpha="0.85"
        app:layout_constraintStart_toStartOf="@id/tv_shift_title"
        app:layout_constraintEnd_toEndOf="@id/tv_shift_title"
        app:layout_constraintTop_toBottomOf="@id/tv_shift_status"
        android:layout_marginTop="4dp"
        android:visibility="gone"/>

    <!-- Manager mode -->
    <Button
        android:id="@+id/btn_assign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assign"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
