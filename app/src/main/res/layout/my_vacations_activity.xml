<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Back button (top-right) -->
    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textAllCaps="false"
        app:icon="@android:drawable/ic_media_previous"
        app:iconPadding="6dp"
        app:iconTint="@color/primaryBlue"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@color/primaryBlue"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Compact summary row: SAME LINE as Back button -->
    <LinearLayout
        android:id="@+id/layout_summary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="6dp"
        android:paddingStart="12dp"
        android:paddingEnd="4dp"
        android:background="#F6F8FF"

        app:layout_constraintTop_toTopOf="@id/btn_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_back">

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance: 0.00"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_pending_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="Pending: 0"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/tv_effective_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Effective: 0.00"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"/>

    </LinearLayout>

    <!-- Header row: column titles -->
    <LinearLayout
        android:id="@+id/layout_headers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="#EEEEEE"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_header_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vacation Date"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_header_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:gravity="end"
            android:text="Status"
            android:textStyle="bold"
            android:textSize="16sp"/>
    </LinearLayout>

    <!-- RecyclerView for vacation requests -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_vacation_requests"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/layout_headers"
        app:layout_constraintBottom_toTopOf="@+id/btn_new_request"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Button to create a new vacation request -->
    <Button
        android:id="@+id/btn_new_request"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="New Request"
        android:textAllCaps="false"
        android:backgroundTint="@color/primaryBlue"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
