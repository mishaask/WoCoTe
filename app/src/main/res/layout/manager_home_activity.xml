<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:paddingTop="24dp">

        <!-- Logout -->
        <Button
            android:id="@+id/btn_manager_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textAllCaps="false"
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/primaryBlue"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_hello_manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, Manager"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_manager_logout"/>

        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Company: -"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_hello_manager"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- ===== My area ===== -->
        <TextView
            android:id="@+id/tv_my_area_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My area"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_company_name"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Row 1 -->
        <Button
            android:id="@+id/btn_attendance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Attendance"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_my_area_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_my_shifts"/>

        <Button
            android:id="@+id/btn_my_shifts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="My Shifts"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_my_area_title"
            app:layout_constraintStart_toEndOf="@id/btn_attendance"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Row 2 -->
        <Button
            android:id="@+id/btn_my_vacations"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="My Vacations"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/btn_attendance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_my_tasks"/>

        <Button
            android:id="@+id/btn_my_tasks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="My Tasks"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/btn_my_shifts"
            app:layout_constraintStart_toEndOf="@id/btn_my_vacations"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Row 3 -->
        <Button
            android:id="@+id/btn_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/btn_my_vacations"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_video_calls"/>

        <Button
            android:id="@+id/btn_video_calls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Video Calls"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/btn_my_tasks"
            app:layout_constraintStart_toEndOf="@id/btn_chat"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btn_my_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textAllCaps="false"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/btn_chat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- ===== Management ===== -->
        <TextView
            android:id="@+id/tv_management_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Management"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/btn_my_profile"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Management Row 1 -->
        <Button
            android:id="@+id/btn_approve_users"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Approve Users"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_management_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_vacation_requests"/>

        <Button
            android:id="@+id/btn_vacation_requests"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Vacation Requests"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_management_title"
            app:layout_constraintStart_toEndOf="@id/btn_approve_users"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Management Row 2 -->
        <Button
            android:id="@+id/btn_manage_attendance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Manage Attendance"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/btn_approve_users"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_manage_shifts"/>

        <Button
            android:id="@+id/btn_manage_shifts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Manage Shifts"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/btn_vacation_requests"
            app:layout_constraintStart_toEndOf="@id/btn_manage_attendance"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- NEW: Swap approvals (full width) -->
        <Button
            android:id="@+id/btn_swap_approvals"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Swap Approvals"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btn_manage_shifts"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Management Row 3 (moved down below swap approvals) -->
        <Button
            android:id="@+id/btn_salary_slips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Upload Salary Slips"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/btn_swap_approvals"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_company_settings"/>

        <Button
            android:id="@+id/btn_company_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Company Settings"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/btn_swap_approvals"
            app:layout_constraintStart_toEndOf="@id/btn_salary_slips"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btn_teams"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Teams"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btn_salary_slips"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/btn_edit_employee_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Edit Employee Profile"
            android:textAllCaps="false"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btn_teams"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
